## showing the page for preparing upload zip file
<div class="portletBody">
	<h3>
		$tlang.getString('uploadall.title')
	</h3>
	<p class="instruction">
		$tlang.getString('uploadall.instruction')<span class="reqStarInline">*</span>
	</p>
	<br/>
	<p class="instruction">
		$tlang.getString('uploadall.instruction2')
	</p>
	<form name="uploadAllForm" action="#toolForm($action)" method="post" onsubmit="return true;" enctype="multipart/form-data">
			<div class="highlightPanel">
			<p class="shorttext">
				<label for="file">$tlang.getString("uploadall.choose.file")</label>
				<input type="file" name="file" id="file" class="upload" />
			</p>
			<h4>$tlang.getString("uploadall.choose.file2")</h4>
			<p class="checkbox indnt2">
				## student submissions
				<input name="$studentSubmission" type="checkbox" value="$studentSubmission" id="$studentSubmission"  />
				<label for="$studentSubmission">$tlang.getString("uploadall.choose.file.studentSubmission")</label><br/>
				## grade files
				<input name="$gradeFile" type="checkbox" value="$gradeFile" id="$gradeFile"  />
				<label for="$gradeFile">$tlang.getString("uploadall.choose.file.gradeFile")</label><br/>
				## instructor comments
				<input name="$comments" type="checkbox" value="$comments" id="$comments"  />
				<label for="$comments">$tlang.getString("uploadall.choose.file.instComments")</label><br/>	
			</p>
			<h4>$tlang.getString("uploadall.releaseOption")</h4>
			<div class="checkbox  indnt2">
				## release uploaded info
				<input type="radio" name="$!name_releaseInfo" id="$!releaseInfo_true" value="$!releaseInfo_true">
				<label for="$!releaseInfo_true">$tlang.getString("uploadall.releaseOption.yes")</label>
				<br/>
				## NOT release uploaded info
				<input type="radio" name="$!name_releaseInfo" id="$!releaseInfo_false" value="$!releaseInfo_false">
				<label for="$!releaseInfo_false">$tlang.getString("uploadall.releaseOption.no")</label>
			</div>
			<p class="act">
				<input type="submit" accesskey="s" name="eventSubmit_doUpload_all" value="$tlang.getString('uploadall.button.upload')" />
				<input type="submit" accesskey="x" name="eventSubmit_doCancel_upload_all" value="$tlang.getString('gen.can')" />
			</p>
		</div>
	</form>
</div>

